{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "commonjs",
        "target": "es6",
        "jsx": "react",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop":true,
        "declaration": true,
        "typeRoots": [ "../../typings", "../../node_modules/@types"]
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "../../node_modules",
        "../../typings"
    ]

}
